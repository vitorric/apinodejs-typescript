{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "rootDir": ".",
        "outDir": "./dist",
        "baseUrl": ".",
        "allowJs": true,
        "removeComments": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "pretty": true,
        "paths": {
            "infra/*": [
                "./src/infra/*"
            ],
            "core/*": [
                "./src/core/*"
            ]
        },
        "declaration": true,
        "isolatedModules": true
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": ["node_modules", "coverage", "dist" ]
}